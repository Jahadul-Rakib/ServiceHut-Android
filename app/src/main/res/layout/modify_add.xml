<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <!--<ImageView-->
        <!--android:id="@+id/imgHome"-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="180dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/home_black" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_rent_month"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="Rent Month:"
            android:textColor="@color/primaryDark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/month"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:entries="@array/month"
            android:prompt="@string/Chose"
            android:visibility="visible">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rentFor"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="Rent Type:"
            android:textColor="@color/primaryDark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/rentFor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:entries="@array/rentType"
            android:prompt="@string/ChoseType"
            android:visibility="visible">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rentFor"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="Client Type:"
            android:textColor="@color/primaryDark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/rentForMenorWomen"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:entries="@array/rentType1"
            android:prompt="@string/ChoseType1"
            android:visibility="visible">

        </Spinner>

    </LinearLayout>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Phone Number" />


    <EditText
        android:id="@+id/rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Monthly Rent" />


    <EditText
        android:id="@+id/advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Advanced Payment" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Location Details" />

    <EditText
        android:id="@+id/itemDetails"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:hint="Information" />
    <Button
        android:id="@+id/locationMap"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Get Location"
        android:layout_gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"
        android:text="Delete"
        android:layout_margin="5dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"
        android:text="Update"
        android:layout_margin="5dp"
        android:visibility="invisible"/>
</LinearLayout>



</LinearLayout>

</ScrollView>