<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0000" />
            <gradient android:angle="-90" android:startColor="#ff000d" android:endColor="#ff000a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0004" />
            <solid android:color="#ff000d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0004" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#ff0011" />
        </shape>
    </item>
</selector>